<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragment.LuckySpin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/coinsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:drawableEnd="@drawable/ic_coins"
            android:drawableRight="@drawable/ic_coins"
            android:drawablePadding="8dp"
            android:textColor="#000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/coinsTv"
            android:layout_height="match_parent">


        <com.umarappdel.earningapk.spin.WheelView
            android:id="@+id/wheelView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            app:BackgroundColor="#ff9800"
            app:CenterImage="@drawable/wheel2"
            android:layout_margin="30dp"
            app:CursorImage="@drawable/ic_cursor"
            app:TextColor="#263238" />

        <Button
            android:id="@+id/playBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:background="@drawable/btn"
            android:backgroundTint="#F44336"
            android:minWidth="180dp"
            android:textColor="#fff" />


            <Button
                android:id="@+id/watchBtn"
                android:layout_above="@id/playBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn"
                android:backgroundTint="#F44336"
                android:minWidth="180dp"
                android:text="@string/watch_video"
                android:textColor="#fff"
                android:layout_marginTop="1dp"
                android:visibility="invisible" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>